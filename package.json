{
  "name": "hodler",
  "version": "1.0.0",
  "description": "Watch assets",
  "main": "index.js",
  "config": {
    "polymer_test_skip": "sauce"
  },
  "scripts": {
    "app:lint": "eslint app",
    "app:test": "cross-env BABEL_ENV=test nyc mocha --opts app.mocha.opts",
    "app:coverage": "nyc report -r text && nyc check-coverage",
    "app:build": "webpack",
    "ui:serve": "polymer serve --port 8080 --hostname 0.0.0.0",
    "ui:serve:build": "http-server -p 8081 build/default",
    "ui:lint": "eslint ui --ext js,html",
    "ui:test": "cross-conf-env polymer test --skip-plugin $npm_package_config_polymer_test_skip",
    "ui:build": "polymer build",
    "alarmist:app:lint": "chokidar \"app/+(src|test)/**/*\" -c \"alarmist-npm app:lint\"",
    "alarmist:app:test": "chokidar \"node_modules/!(.cache)/**/*\" \"app/+(src|test)/**/*\" -c \"alarmist-npm app:test\"",
    "alarmist:app:coverage": "chokidar \"app/coverage/lcov.info\" -c \"alarmist-npm app:coverage\"",
    "alarmist:app:build": "alarmist-webpack -n app:build",
    "alarmist:ui:serve": "alarmist-npm --service ui:serve",
    "alarmist:ui:serve:build": "alarmist-npm --service ui:serve:build",
    "alarmist:ui:lint": "chokidar \"ui/+(src|test)/**/*\" -c \"alarmist-npm ui:lint\"",
    "alarmist:ui:test": "chokidar \"bower_components/**/*\" \"ui/+(src|test|app)/**/*\" -c \"alarmist-npm ui:test\"",
    "alarmist:ui:build": "chokidar \"bower_components/**/*\" \"ui/+(src|app)/**/*\" \"index.html\" \"manifest.json\" \"sw-precache-config.js\" \"bower.json\" \"images/**/*\" -c \"alarmist-npm ui:build\"",
    "start": "alarmist-monitor run-p alarmist:app:lint alarmist:app:test alarmist:app:coverage alarmist:app:build alarmist:ui:serve alarmist:ui:serve:build alarmist:ui:lint alarmist:ui:test alarmist:ui:build",
    "build": "run-s app:lint app:test app:coverage app:build ui:lint ui:test ui:build",
    "coveralls": "cat app/coverage/lcov.info ui/coverage/lcov.info | coveralls",
    "predeploy": "./predeploy.sh",
    "deploy": "gh-pages-travis",
    "wct:start": "wct --persistent --skip-plugin sauce"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pghalliday/hodler.git"
  },
  "author": "Peter Halliday <pghalliday@gmail.com> (http://pghalliday.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pghalliday/hodler/issues"
  },
  "homepage": "https://github.com/pghalliday/hodler#readme",
  "devDependencies": {
    "alarmist": "^1.0.23",
    "alarmist-npm": "^1.0.5",
    "alarmist-webpack": "^1.0.11",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-plugin-istanbul": "^4.1.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.4.0",
    "bower": "^1.8.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "chokidar-cli": "^1.2.0",
    "coveralls": "^2.13.0",
    "cross-conf-env": "^1.1.2",
    "cross-env": "^4.0.0",
    "eslint": "^3.19.0",
    "eslint-config-google": "^0.7.1",
    "eslint-plugin-html": "^2.0.1",
    "gh-pages-travis": "^1.0.4",
    "http-server": "^0.9.0",
    "lighthouse": "^1.6.5",
    "lodash": "^4.17.4",
    "mocha": "^3.3.0",
    "npm-run-all": "^4.0.2",
    "nyc": "^10.2.0",
    "polymer-cli": "next",
    "sinon": "^2.1.0",
    "sinon-chai": "^2.9.0",
    "source-map-explorer": "^1.3.3",
    "web-component-tester": "^6.0.0-prerelease.9",
    "web-component-tester-istanbul": "^0.10.0",
    "webpack": "^2.4.1"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "crypto-js": "^3.1.9-1",
    "localforage": "^1.5.0",
    "redux": "^3.6.0",
    "redux-actions": "^2.0.2",
    "redux-devtools-extension": "^2.13.0",
    "redux-duckling": "^0.0.9",
    "redux-logger": "^3.0.1",
    "redux-promise": "^0.5.3",
    "redux-thunk": "^2.2.0",
    "reselect": "^3.0.0"
  }
}
